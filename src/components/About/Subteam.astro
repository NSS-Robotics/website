---
const {
  name,
  alt,
  description,
  image = `/images/aboutus/subteams/${name}.webp`,
  fadeDirection,
} = Astro.props;
---

<div class="teamgroup">
  <div>
    <img data-aos={'fade-' + fadeDirection} src={image} alt={alt} />
  </div>
  <div>
    <h3>{name}</h3>
    <p>
      {description}
    </p>
  </div>
</div>
<style>
  .teamgroup {
    display: flex;
    align-items: center;
  }
  img {
    width: 550px;
    height: 420px;
    border-radius: 10px;
    float: left;
    margin-left: 50px;
    margin-right: 50px;
    left: 0;
  }
  p {
    text-align: center;
    font-size: 20px;
    padding-left: 55px;
    padding-right: 55px;
  }
  h3 {
    text-align: center;
    text-decoration: none;
    font-size: 30px;
    margin-top: 0;
    text-decoration: underline;
    text-decoration-color: var(--blue);
  }
</style>
