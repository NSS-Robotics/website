---
const {
  name,
  description,
  buttonText = 'Website',
  buttonLink,
  border = '10px',
  buttonVisible = '',
} = Astro.props;
---

<div data-aos="zoom-in-up" class="sponsorbox">
  <img
    src={'/images/sponsors/' + name + '.webp'}
    alt={name + "'s logo"}
    style={` border-radius: ${border}; `}
  />
  <figcaption>{name}</figcaption>
  <p>{description}</p>
  <a id={buttonVisible} href={buttonLink} target="_blank">{buttonText}</a>
</div>

<style>
  #false {
    display: none !important;
  }
  .sponsorbox {
    background-color: #f5f5f5;
    border-radius: 10px;
    padding: 20px;
    width: 25vw;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }
  img {
    height: 7vw;
    width: auto;
    border-radius: 10px;
  }
  p {
    text-align: center;
    font-size: 15px;
  }
  a {
    display: inline-block;
    text-decoration: none;
    color: white;
    background-color: var(--onyx);
    padding-left: 17px;
    padding-right: 17px;
    padding-top: 8px;
    padding-bottom: 8px;
    border-radius: 10px;
    transition-duration: 200ms;
    border: 3px solid var(--onyx);
  }
  a:hover {
    transition-duration: 200ms;
    background-color: transparent;
    color: var(--vividblue);
    border: 3px solid var(--vividblue);
  }
  figcaption {
    font-size: 20px;
    font-weight: bold;
    margin-top: 30px;
  }
  @media (max-width: 799px) {
    img {
      height: 15vw;
    }
  }
</style>
