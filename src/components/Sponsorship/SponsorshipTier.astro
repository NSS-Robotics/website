---
const { tier, amount, colour, things=[], buttonText='Contact Us', buttonLink='mailto:hello@knightowls.ca' } = Astro.props;
---

<div data-aos="zoom-in" class="box">
  <h2 class="tiertitle">{tier}</h2>
  <p class="amount" style={` color: ${colour}; `}>{amount}</p>
  <div class="miniline"></div>
  <p class="taxrecipt">Eligible for a tax receipt</p>
  <div class="line"></div>
  <div class="things">
    {
      things.map((thing: string) => (
        <img
          data-aos="zoom-in"
          data-aos-delay="250"
          src="/images/check.svg"
          alt="checkmark"
        />
      <p>{thing}</p>
      ))
    }
  </div>
  <a href={buttonLink}>{buttonText}</a>
</div>

<style>
  .tiertitle {
    margin-bottom: 10px;
    font-weight: 900;
  }
  .box {
    background-color: #f5f5f5;
    border-radius: 10px;
    display: flex;
    flex-direction: column;
  }
  .box a {
    display: flex;
    justify-content: center;
    align-self: center;
    margin-top: auto;
    margin-bottom: 15px;
    transition-duration: 300ms;
    text-decoration: none;
    color: white;
    background-color: var(--onyx);
    padding: 12px;
    border-radius: 10px;
    width: 32%;
    border: 3px solid var(--onyx);
  }
  .box a:hover {
    transition-duration: 300ms;
    background-color: transparent;
    color: var(--vividblue);
    border: 3px solid var(--vividblue);
  }
  .line {
    height: 2px;
    width: 90%;
    border-radius: 10px;
    background-color: #b7b7b7;
    align-self: center;
    margin-bottom: 20px;
    margin-top: 20px;
  }
  .miniline {
    height: 2px;
    width: 50%;
    border-radius: 10px;
    background-color: #b7b7b7;
    align-self: center;
    margin-bottom: 5px;
    margin-top: 5px;
  }
  .things {
    display: grid;
    grid-template-columns: auto auto;
    grid-gap: 13px;
    align-items: center;
    justify-content: center;
    margin-left: 20px;
    margin-right: 20px;
    margin-bottom: 10px;
  }
  .things p {
    text-align: left;
  }
  .things img {
    height: 12px;
    width: auto;
  }
  .amount {
    margin-bottom: 1px;
    margin-top: 10px;
    font-size: 25px;
    font-weight: bold;
  }
  .taxrecipt {
    margin-top: 1px;
    margin-bottom: 14.5px;
  }
</style>
