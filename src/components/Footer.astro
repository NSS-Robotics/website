---
import { Icon } from 'astro-icon/components';
const currentYear = new Date().getFullYear();
---

<div class="footer">
  <div class="center">
    <div class="footerlinks">
      <a href="https://github.com/NSS-Robotics/" target="_blank">
        <Icon name="bi:github" />
      </a>
      <a href="https://www.instagram.com/knightowls_8884/" target="_blank">
        <Icon name="bi:instagram" />
      </a>
      <a href="https://www.youtube.com/@knightowls/" target="_blank">
        <Icon name="ri:youtube-fill" />
      </a>
      <a href="mailto:hello@knightowls.ca">
        <Icon name="bi:envelope" />
      </a>
    </div>
    <div class="pages">
      <a href="/">Home</a>
      <a href="/about">About Us</a>
      <a href="/gallery">Gallery</a>
      <a href="/sponsors">Our Sponsors</a>
      <a href="/tiers">Sponsorship Tiers</a>
      <a href="/donate">Sponsor Us</a>
    </div>
    <div class="footerline"></div>
    <div>
      <p>&copy; Knight Owls {currentYear}</p>
    </div>
    <div class="vercel">
      <p>Powered By</p>
      <a href="https://vercel.com/?utm_source=nssrobotics&utm_campaign=oss"
        ><img src="/images/vercel.svg" alt="Vercel logo" />
      </a>
    </div>
  </div>
</div>
<style>
  .footer {
    background-color: var(--onyx);
    color: white;
    padding-top: 10px;
    padding-bottom: 10px;
    margin-top: 50px;
    text-align: center;
    z-index: 1;
  }
  [data-icon] {
    color: white;
    width: 30px;
    height: auto;
    margin-left: 10px;
    transition-duration: 0.3s;
  }
  [data-icon]:hover {
    color: var(--blue);
    transition-duration: 0.3s;
  }
  .footer img {
    width: 80px;
    margin-bottom: 15px;
    margin-left: 10px;
  }
  .vercel {
    display: flex;
    flex-direction: row;
    align-items: center;
  }
  .center {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 100%;
  }
  .center p {
    font-size: 18px;
    margin-top: 0px;
  }
  .footerline {
    height: 2px;
    width: 30%;
    background-color: white;
    margin-bottom: 20px;
  }
  .footerlinks {
    margin-top: 12px;
    margin-bottom: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: row;
  }
  .icons {
    color: #ffffff;
    font-size: 27px;
    padding: 5px;
    transition-duration: 0.3s;
  }
  .pages {
    margin-bottom: 15px;
  }
  .pages a {
    margin-left: 8px;
    margin-right: 8px;
    color: white;
    text-decoration: none;
    transition-duration: 0.3s;
    text-decoration: underline solid transparent;
  }
  .pages a:hover {
    text-decoration: underline solid var(--blue);
    text-decoration-thickness: 2px;
    transition-duration: 0.3s;
  }
</style>
