---
import Footer from '../components/Footer.astro';
import { SEO } from 'astro-seo';
import '@fontsource/poppins';
import Favicons from '../components/Favicons.astro';
import Live from '../components/Live.astro';
import SpeedInsights from '@vercel/speed-insights/astro';
import { ViewTransitions } from 'astro:transitions';
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <SEO
      title={title}
      description="The official website for the Knight Owls FIRST robotics team from Toronto, Canada"
      extend={{
        // extending the default link tags
        link: [{ rel: 'icon', href: '/favicon.ico' }],
        // extending the default meta tags
        meta: [
          {
            name: 'viewport',
            content: 'width=device-width, initial-scale=1.0',
          },
          { name: 'theme-color', content: '#5ccbff' },
          {
            name: 'twitter:image',
            content: 'https://knightowls.ca/images/people/placeholder.webp',
          },
        ],
      }}
      openGraph={{
        basic: {
          title: 'The Knight Owls',
          type: 'website',
          image: '/favicon.ico',
          url: 'https://knightowls.ca',
        },
        optional: {
          description:
            'The official website for the Knight Owls FIRST robotics team from Toronto, Canada',
        },
        image: {
          width: 1200,
          height: 630,
          alt: "An owl standing on a tree branch at night wearing a knight's helmet",
        },
      }}
    />
    <Favicons />
    <SpeedInsights />
    <link rel="stylesheet" href="/css/mobile.css" />
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />

    <ViewTransitions />
  </head>
  <body>
    /* <Live /> */
    <slot />
    <Footer />
    <style>
      :root {
        --onyx: #282828;
        --blue: #707cac;
      }
      /* Entire Scrollbar */
      ::-webkit-scrollbar {
        width: 15px;
      }
      /* Draggy Thingy */
      ::-webkit-scrollbar-thumb {
        background: #8c8c8c;
      }
      html,
      body {
        margin: 0;
        padding: 0;
        scroll-behavior: smooth;
        font-family: 'Poppins', sans-serif;
        overflow-x: hidden;
      }
      .header {
        background-repeat: no-repeat !important;
        background-position: center !important;
        background-size: cover !important;
        width: 100%;
        height: 100vh;
        margin-top: auto;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-flow: column;
      }
    </style>
    <script defer src="/_vercel/insights/script.js"></script>
    <script is:inline src="https://unpkg.com/aos@next/dist/aos.js"></script>
    <script is:inline>
      AOS.init({
        duration: 600,
        delay: 100,
        once: true,
        offset: 50,
      });
    </script>
    <script is:inline>
      document.addEventListener('astro:after-swap', AOS.init);
    </script>
  </body>
</html>
